<Window x:Class="wpf_lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:wpf_lab_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:StringToDoubles x:Key="StringToDoubles"/>
        <DataTemplate x:Key="SplineTemplate">
            <StackPanel Margin="5">
                <TextBlock>
                    <Run
                    Text="coor: " /><Run 
                    Text="{Binding StringFormat=F2, Path=coord}"/><Run 
                    Text="; SplineVal: " /><Run 
                    Text="{Binding StringFormat=F2, Path=SplineValue}" /><Run 
                    Text="; 2nd Derevative: " /><Run 
                    Text="{Binding StringFormat=F2, Path=Spline2}" />
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <!--<Window.Resources>
        <DataTemplate x:Key="key_template">
            <TextBlock  Text="{Binding Path = Method.Name}" />
        </DataTemplate>
    </Window.Resources>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="743*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="21,99,0,0" TextWrapping="Wrap" Text="{Binding a, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="21,152,0,0" TextWrapping="Wrap" Text="{Binding b, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="21,217,0,0" TextWrapping="Wrap" Text="{Binding NodeCnt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <RadioButton Content="Uniform grid" HorizontalAlignment="Left" Margin="25,245,0,0" IsChecked="{Binding IsUniform, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <RadioButton Content="Non-uniform grid" HorizontalAlignment="Left" Margin="25,274,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ComboBox ItemsSource="{Binding funcs}" Margin="18,300,656,0" VerticalAlignment="Top" SelectedIndex="{Binding fRawEnum, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,48,0,0" TextWrapping="Wrap" Text="Initialize RawData:" VerticalAlignment="Top" Height="16" Width="120" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="149,48,0,0" TextWrapping="Wrap" Text="Initialize SplineData:" VerticalAlignment="Top" Height="16" FontWeight="Bold" Grid.Column="1"/>
        <TextBox Margin="149,99,474,0" TextWrapping="Wrap" Text="{Binding SplineNodeCnt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"  Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="149,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding SplineInfo, Converter={StaticResource StringToDoubles}}" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="322,49,0,0" TextWrapping="Wrap" Text="View raw data:" VerticalAlignment="Top" RenderTransformOrigin="0.5,-0.06" Width="126" FontWeight="Bold" Grid.Column="1">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.188"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <ListBox ItemsSource="{Binding raw_values, Mode=TwoWay}"  Margin="291,99,267,199" Grid.Column="1"/>
        <ListBox ItemsSource="{Binding SplineList, Mode=TwoWay}" ItemTemplate="{StaticResource SplineTemplate}"  Margin="494,99,10,194" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="494,48,0,0" TextWrapping="Wrap" Text="View spline data:" VerticalAlignment="Top" Width="134" FontWeight="Bold" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="561,245,0,0" TextWrapping="Wrap" Text="{Binding ElementName=list_box_spline, Path=SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Height="66" Width="172" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="561,316,0,0" TextWrapping="Wrap" Text="{Binding Integral, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Height="43" Width="172" Grid.Column="1"/>
        <Menu Height="25" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Save" Command="{Binding SaveCommand}" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Execute" >
                <MenuItem  Command="{Binding FromControlsCommand}" Header="RawData from Controls" ></MenuItem>
                <MenuItem  Header="RawData from File" Command="{Binding FromFileCommand}" ></MenuItem>
            </MenuItem>
        </Menu>
        <Button Command="{Binding SaveCommand}" Content="Save" HorizontalAlignment="Left" Margin="19,328,0,0" VerticalAlignment="Top" Height="20" Width="125" Grid.ColumnSpan="2"/>
        <Button  Command="{Binding FromControlsCommand}" Content="RawData from contols" HorizontalAlignment="Left" Margin="18,353,0,0" VerticalAlignment="Top" Height="24" Width="126" Grid.ColumnSpan="2"/>
        <Button  Command="{Binding FromFileCommand}" Content="RawData from file" HorizontalAlignment="Left" Margin="14,382,0,0" VerticalAlignment="Top" Height="21" Width="134" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,77,0,0" TextWrapping="Wrap" Text="Left interp border:" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,192,0,0" TextWrapping="Wrap" Text="Node count:" VerticalAlignment="Top" Width="116" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,129,0,0" TextWrapping="Wrap" Text="Right interp border:" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="149,78,0,0" TextWrapping="Wrap" Text="Node count:" VerticalAlignment="Top" Width="116" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="149,131,0,0" TextWrapping="Wrap" Text="Derevative values" VerticalAlignment="Top" Width="116" Grid.Column="1"/>
        <oxy:PlotView Model="{Binding PlotModel, Mode=TwoWay}" HorizontalAlignment="Left" Margin="129,247,0,21" Width="401" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <oxy:PlotView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.131"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.398"/>
                </TransformGroup>
            </oxy:PlotView.RenderTransform>
        </oxy:PlotView>
    </Grid>
</Window>
